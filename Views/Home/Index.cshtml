@using Microsoft.AspNetCore.Identity
@using ECommerceWebApp.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "E-Commerce Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<div class="container-fluid bg-dark text-white text-center py-5">
    <h1 class="display-4 fw-bold">Welcome to My E-Commerce Store 🛒</h1>
    <p class="lead">Best deals on electronics, fashion & more</p>

    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);

        if (user.Role == "Admin")
        {
            <a href="/Admin/Dashboard" class="btn btn-warning btn-lg mt-3">Go to Admin Dashboard</a>
        }
        else if (user.Role == "Seller")
        {
            <a href="/Seller/Seller" class="btn btn-info btn-lg mt-3">Go to Seller Page</a>
        }
        else
        {
            <a href="/Buyer/Buyer" class="btn btn-success btn-lg mt-3">Shop Now</a>
        }
    }
    else
    {
        <a href="/Identity/Account/Login" class="btn btn-warning btn-lg mt-3">Login</a>
        <a href="/Identity/Account/Register" class="btn btn-success btn-lg mt-3">Register</a>
    }
</div>

<!-- Available Products Section -->
<div class="container mt-5">
    <h2 class="mb-4 text-primary">Available Products</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@product.ImagePath" class="card-img-top" alt="@product.Name" style="height:200px; object-fit:cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-success">₹@product.Price</p>
@*                         <a href="/Buyer/AddToCart/@product.Id" class="btn btn-warning btn-sm">Add to Cart</a>
 *@                        <a href="/Buyer/BuyNow/@product.Id" class="btn btn-danger btn-sm">Buy Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Categories Section -->
<div class="container py-5 bg-light">
    <h2 class="text-center mb-4">Shop by Category</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-3">
            <div class="p-4 border rounded shadow-sm">
                <h5>Electronics</h5>
                <p>Latest gadgets and devices</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="p-4 border rounded shadow-sm">
                <h5>Fashion</h5>
                <p>Trendy clothing & accessories</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="p-4 border rounded shadow-sm">
                <h5>Home & Living</h5>
                <p>Furniture, decor & more</p>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3 mt-5">
    &copy; @DateTime.Now.Year My E-Commerce Store. All rights reserved.
</footer>


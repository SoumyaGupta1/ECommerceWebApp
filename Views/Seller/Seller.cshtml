@model List<Product>


<h2>My Products</h2>
<a class="btn btn-primary" href="/Seller/Add">Add Product</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>ImagePath</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>

                <td>
                    @if (!string.IsNullOrEmpty(product.ImagePath))
                    {
                        <img src="@product.ImagePath" width="100" />
                    }
                </td>
                <td>
                    <a class="btn btn-warning" href="/Seller/Edit/@product.Id">Edit</a>

                    <a class="btn btn-danger" href="/Seller/Delete/@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>



@model ECommerceWebApp.Models.Product

<h2>Edit Product</h2>

<form asp-action="EditProduct" method="post" enctype="multipart/form-data">
<div class="form-group">
    <label>Product Id</label>
    <input asp-for="Id" class="form-control" readonly />  <!-- readonly bana diya -->
</div>
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label>Price</label>
        <input type="number" step="0.01" class="form-control" asp-for="Price" />
    </div>

    <div class="form-group">
        <label>Category</label>
        <input type="Category" class="form-control" asp-for="Category" />
    </div>



    <div class="form-group">
        <label>Product Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary mt-2">Update</button>
</form>



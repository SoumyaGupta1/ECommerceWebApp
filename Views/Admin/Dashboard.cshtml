@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Welcome, Admin 👋</h2>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary shadow-lg rounded-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text display-6 fw-bold">@ViewBag.TotalUsers</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success shadow-lg rounded-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Products</h5>
                    <p class="card-text display-6 fw-bold">@ViewBag.TotalProducts</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning shadow-lg rounded-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Earnings</h5>
                    <p class="card-text display-6 fw-bold">@ViewBag.TotalEarnings</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-5">
        <h4 class="mb-4">⚡ Quick Actions</h4>
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="card shadow-lg border-0 rounded-3 action-card text-center p-4">
                    <div class="card-body">
                        <i class="bi bi-people-fill text-primary" style="font-size: 2rem;"></i>
                        <h5 class="mt-2">Manage Users</h5>
                        <p class="text-muted">Add, update or remove users</p>
                        <a asp-controller="Admin" asp-action="ManageUsers" class="btn btn-primary btn-sm">Go</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card shadow-lg border-0 rounded-3 action-card text-center p-4">
                    <div class="card-body">
                        <i class="bi bi-box-seam text-success" style="font-size: 2rem;"></i>
                        <h5 class="mt-2">Manage Products</h5>
                        <p class="text-muted">Add new products, Update or remove Products</p>
                        <a asp-controller="Admin" asp-action="ManageProducts" class="btn btn-success btn-sm">Go</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons (for nice icons) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
